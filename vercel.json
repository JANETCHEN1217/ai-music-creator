{
  "version": 2,
  "routes": [
    {
      "src": "/api/proxy/(.*)",
      "dest": "/api/proxy.js?path=$1"
    },
    {
      "src": "/api/proxy",
      "dest": "/api/proxy.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/kie/(.*)",
      "destination": "/api/kie.js?path=$1"
    },
    {
      "source": "/api/kie",
      "destination": "/api/kie.js"
    }
  ]
} 